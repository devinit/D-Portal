cd `dirname $0`
mkdir -p ../dstore/cache
cd ../dstore

# remove old cache and backup current cache
rm -rf cache2
mv cache cache2

STARTTIME=$(date +%s)
echo "Starting Download of all xml files at $(date)" | tee -a time.log

git clone git@github.com:xriss/dataiati.git
cd dataiati
git pull
./datasets.sh
cd ..
mv dataiati/datasets cache

# remember current errors
cat dataiati/errors.txt

cd cache

ENDTIME=$(date +%s)
echo "Finished Download of all xml files at $(date)" | tee -a time.log
ls -s *.xml | awk '{sum+=$1;} END {printf("%'"'"'d kilobytes downloaded\n",sum);}' | tee -a time.log
echo "Download took  $(($ENDTIME - $STARTTIME)) seconds to complete." | tee -a time.log
echo "" | tee -a time.log
